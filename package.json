    "isomorphic-dompurify": "^2.35.0",
    "lucide-react": "^0.553.0",
    "next": "^15.5.9",
    "next-intl": "^4.4.0",
    "next-themes": "^0.4.6",
    "openai": "^6.17.0",
    "pino": "^10.3.0",
    "postgres": "^3.4.7",
    "qrcode": "^1.5.4",
    "react": "18.2.0",
